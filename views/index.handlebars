<h1>Burgers!</h1>

<h2>Burgers to Eat</h2>

<ul>
  {{#each burgers}}
    {{#unless type}}
      {{> burgers/burger-block type=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if type}}
      {{> burgers/burger-block type=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devour?</label><br>
    <input type="radio" name="type" value="1" checked> Devoured!<br>
    <input type="radio" name="type" value="0"> Burgers to Eat!
  </div>

  <button type="submit">Add Burger</button>
</form>